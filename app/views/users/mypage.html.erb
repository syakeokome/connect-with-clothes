<h3>マイページ</h3>

<span>登録情報</span>
<%= link_to "編集する", edit_user_path(@user), class:"btn btn-success" %>
<div class="container" px-5 px-sm-0>
  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @user, :user_image,format:'jpeg', fallback:"no_image.jpg",:size=>'100x100' %>
    </div>
    <div class="col-md-7 offset-md-1">
      <p>プロフィール：<%= @user.self_introduction %></p>
    </div>
  </div>
</div>
<table>
   <tr>
     <th>ニックネーム</th>
     <td><%= @user.nickname %></td>
   </tr>
   <tr>
     <th>身長</th>
     <td><%= @user.height %>cm</td>
    </tr>
    <tr>
      <th>年齢</th>
      <td><%= @user.age %>歳</td>
    <tr>
     <th>郵便番号</th>
     <td><%= @user.postal_code %></td>
    </tr>
    <tr>
     <th>住所</th>
     <td><%= @user.address %></td>
    </tr>
    <tr>
     <th>メールアドレス</th>
     <td><%= @user.email %></td>
    </tr>
</table>
<table>
  <tr>
    <th>配送先</th>
    <td><%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %></td>
  </tr>
  <tr>
    <th>注文履歴</th>
   <td><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></td>
  </tr>
</table>
