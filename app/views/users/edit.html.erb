<div>
  <h3>会員情報編集</h3>
</div>
<%= form_with model: @user, url: user_path(@user), local: true do |f| %>
  <div class=field>
  <label for="inputImage">アイコン</label>
  <%=f.attachment_field :user_image %>
  <div class=field>
   <h4>プロフィール</h4>
   <%= f.text_area :self_introduction, class:"form-control" %>
  </div>
 <table class="table table-inverse">
   <tr>
     <th>ニックネーム</th>
     <td><%= @user.nickname %></td>
   </tr>
   <tr>
     <th>身長</th>
     <td><%= @user.height %>cm</td>
    </tr>
    <tr>
      <th>年齢</th>
      <td><%= @user.age %>歳</td>
    <tr>
     <th>郵便番号</th>
     <td><%= @user.postal_code %></td>
    </tr>
    <tr>
     <th>住所</th>
     <td><%= @user.address %></td>
    </tr>
    <tr>
     <th>メールアドレス</th>
     <td><%= @user.email %></td>
    </tr>
    <tr>
     <th></th>
     <td><%= f.submit '編集内容を保存', class:"btn btn-success" %> <%= link_to "退会する", public_customers_unsubscribe_path, class:"btn btn-danger" %></td>
    </tr>
  </table>
<% end %>