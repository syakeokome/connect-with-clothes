<div class="title">
  <h3 class="fas fa-crown nav-link ">
   <span class="font">Your Address Edit</span>
  </h3>
</div>
<div class="container">
  <%= form_with model: @address, url: address_path(@address), local: true do |f| %>
   <table class="table table-hover table-inverse">
    <tr>
     <th>郵便番号(ハイフンなし)</th>
     <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
     <th>住所</th>
     <td><%= f.text_field :address %></td>
    </tr>
    <tr>
     <th>宛名</th>
     <td><%= f.text_field :name %></td>
    </tr>
    </table>
    <div class="link">
     <%= f.submit '変更内容を保存', class:"btn btn-success" %>
    </div>
  <% end %>
 </div>