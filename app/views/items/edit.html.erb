<h3>投稿編集画面</h3>
<%= form_with model: @item, url: item_path(@item), local: true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>投稿名</h4>
  <%= f.text_field :name %>
  <h4>投稿説明</h4>
  <%= f.text_area :introduction %>
  <h4>タグ</h4>
  <%= f.text_area :tag, value: @tags %>
  <h4>価格</h4>
  <%= f.text_field :price %>円
  <%= f.submit '変更を保存', class:"btn btn-success" %>
<% end %>