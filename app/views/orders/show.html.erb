<div class="title">
    <h3 class="fas fa-crown nav-link ">
        <span class="font">Order History Details</span>
    </h3>
</div>


<div class="container">
    <h4>＊注文情報</h4>
    <table>
    <tr>
     <th>注文日</th>
     <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
    </tr>
    <tr>
     <th>配送先</th>
     <td>
       〒<%= @order.postal_code %></br>
       <%= @order.address %></br>
       <%= @order.name%>
     </td>
    </tr>
    <tr>
     <th>支払方法</th>
     <td><%= @order.payment_method_i18n %></td>
    </tr>
    </table>
</div>
<p></p>
<div class="container">
    <table>
      <thead>
       <tr>
         <th>商品</th>
         <th>価格</th>
       </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @order.item.name %></td>
          <td><%= @order.item.price %></td>
        </tr>
      </tbody>
    </table>
</div>