<h3>注文履歴詳細</h3>

<div>注文情報</div>
<table>
   <tr>
     <th>注文日</th>
     <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
   </tr>
   <tr>
     <th>配送先</th>
     <td>
       <%= @order.postal_code %>
       <%= @order.address %>
       <%= @order.name%>
     </td>
    </tr>
    <tr>
     <th>支払方法</th>
     <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>金額</th>
      <td><%= @order.price %></td>
    </tr>
</table>
<table>
  <thead>
   <tr>
     <th>商品</th>
     <th>価格</th>
   </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.item.name %></td>
      <td><%= @order.price %></td>
    </tr>
  </tbody>
</table>
